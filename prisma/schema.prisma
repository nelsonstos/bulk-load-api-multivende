generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["debian-openssl-3.0.x", "windows"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model logbook {
  id Int @id @default(autoincrement())
  name String
  description String?
  status String?
  observations String?
  total Int
  totalRecorded Int?
  authorizationCode String
  endDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products products[]

 }

model products {
    id String @id
    name String
    alias String?
    model String
    description String?
    code String
    internalCode String
    shortDescription String
    htmlDescription String
    htmlShortDescription String
    logbookId Int
    status String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    logbook logbook @relation( fields: [logbookId], references: [id])
}



